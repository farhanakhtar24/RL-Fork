name: Pull from upstream
on:
  pull_request:
    branches:
      - main

jobs:
  pull:
    runs-on: ubuntu-latest
    steps:
      - name: Checkout upstream
        uses: actions/checkout@v2
        with:
          repository: <upstream-repo-owner>/<upstream-repo-name>
          ref: main

      - name: Pull changes
        run: git pull
